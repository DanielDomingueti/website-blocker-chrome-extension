{
  "manifest_version": 3,
  "name": "Site Blocker",
  "version": "1.0",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": "icon.png"
  }
}
